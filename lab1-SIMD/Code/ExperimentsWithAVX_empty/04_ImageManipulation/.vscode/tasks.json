{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build",
            "command": "/usr/bin/g++",
            "args": [
              "-march=haswell",
              "-g",
              "${file}", "${fileDirname}/MyImageManipulation.cpp", "${fileDirname}/ImageManipulation.cpp",
              "-o",
              "${fileDirname}/${fileBasenameNoExtension}",
              "-L/usr/lib/x86_64-linux-gnu/",
              "-lopencv_calib3d", "-lopencv_core", "-lopencv_highgui", "-lopencv_imgcodecs", "-lopencv_imgproc"
            ],
            "options": {
              "cwd": "/usr/bin"
            },
            "problemMatcher": [],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Run",
            "command": "${fileDirname}/${fileBasenameNoExtension}",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}